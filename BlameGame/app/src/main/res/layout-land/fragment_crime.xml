<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/view_camera_and_title"/>
    <!-- Old Title before switching over to use included view
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/crime_title_label"
          style="?android:listSeparatorTextViewStyle"
          />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/crime_title"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:hint="@string/crime_title_hint"
          />
  -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/crime_details_label"
          style="?android:listSeparatorTextViewStyle"
          />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solved_check_box"
        android:text="@string/solved_checkbox_label"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="FRI MAR 27"
            android:id="@+id/crime_date"
            android:layout_gravity="start"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="15:10:11 EDT 2015"
            android:id="@+id/crime_time"
            android:layout_gravity="end"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"/>

    </LinearLayout>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
>

          <Button

              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:text="@string/crime_suspect_text"
              android:id="@+id/crime_suspect"/>

          <Button
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:text="@string/crime_report_text"
              android:id="@+id/crime_report"/>
      </LinearLayout>


  </LinearLayout>
